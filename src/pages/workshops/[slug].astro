---
import { getCollection, render } from "astro:content";
import WorkshopLayout from "../../layouts/Markdown.astro";

export async function getStaticPaths() {
  const workshop = await getCollection("workshops");
  return workshop.map((workshop) => ({
    params: { slug: workshop.id },
    props: { workshop },
  }));
}

const { workshop } = Astro.props;
const { Content } = await render(workshop);
---

<WorkshopLayout frontmatter={workshop.data}>
  <Content />
</WorkshopLayout>
